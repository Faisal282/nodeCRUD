<% include ../layouts/header.ejs %>
<div class="container pt-5 mt-5">
    <form action="/users/edit/<%= id %>" method="post">
        <div class="form-group">
            <label for="exampleInputEmail1">Nama</label>
            <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Nama"
                name="nama" value="<%= nama %>">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Jurusan</label>
            <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Jurusan"
                name="jurusan" value="<%= jurusan %> ">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Email</label>
            <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Jurusan"
                name="email" value="<%= email %> ">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">No Telpon</label>
            <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Jurusan"
                name="no" value="<%= no %> ">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <input type="hidden" name="_method" value="PUT"/>
    </form>
</div>

<% include ../layouts/footer.ejs %>